#include <vector>
#include <string>

// C includes

// Library includes
#include <cxxtest/TestSuite.h>

// Project includes
#include <Globals.h>
#include <Button.h>

using namespace std;

class ButtonTestSuite: public CxxTest::TestSuite
{
  Button* pb;
public:
  void setUp()
  {
    pb = new Button(1);
  }
  void tearDown()
  {
    delete pb;
    theLogger.setVerbose(false);
  }

  void testBegin( void )
  {
    pb->begin();

    TS_ASSERT_EQUALS( theLogger.lines_contain("1 INPUT"), 1 );
  }
};
